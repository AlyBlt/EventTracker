@model App.Mvc.Models.EventModel

<h2>Edit Event</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label">Date</label>
        <input type="text" id="eventDate" asp-for="Date" class="form-control" placeholder="Select date" />
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i>Save</button>
    <a asp-action="List" class="btn btn-secondary"><i class="bi bi-arrow-left"></i>Back</a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#eventDate", {
            dateFormat: "Y-m-d",    // yyyy-mm-dd format
            locale: "en",            // İngilizce
            minDate: "today",        // Geçmiş tarih seçilemez
            allowInput: true
        });
    </script>
}