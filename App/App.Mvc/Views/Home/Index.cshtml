@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to EventTracker!</h1>
    <p class="lead mb-4">
        Keep track of all your upcoming events, add new ones, and manage them easily.
    </p>

    <!-- Şık kart ile buton -->
    <div class="card mx-auto" style="max-width: 550px; background-color: #e9f7ef; border-radius: 12px; padding: 1.5rem;">
        <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-calendar-event"></i> Your Events at a Glance</h5>
            <p class="card-text">View, add, edit, and manage all your events easily in one place.</p>
            <a asp-controller="Events" asp-action="List" class="btn btn-success btn-lg mt-2">
                <i class="bi bi-list-ul"></i> View Events
            </a>
        </div>
    </div>
</div>